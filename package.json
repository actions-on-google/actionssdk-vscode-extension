{
  "name": "actions-sdk-vscode-extension",
  "displayName": "Actions SDK",
  "description": "VS Code extension for Actions SDK",
  "version": "0.5.0",
  "publisher": "Google",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/actions-sdk-snippets.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "settings/*.yaml",
        "url": "./schema/settings.json"
      },
      {
        "fileMatch": "settings/**/*.yaml",
        "url": "./schema/localizedSettings.json"
      },

      {
        "fileMatch": "actions/*.yaml",
        "url": "./schema/actions.json"
      },
      {
        "fileMatch": "actions/**/*.yaml",
        "url": "./schema/actions.json"
      },

      {
        "fileMatch": "webhooks/*.yaml",
        "url": "./schema/webhook.json"
      },

      {
        "fileMatch": "custom/intents/*.yaml",
        "url": "./schema/intent.json"
      },
      {
        "fileMatch": "custom/intents/**/*.yaml",
        "url": "./schema/intent.json"
      },

      {
        "fileMatch": "custom/global/*.yaml",
        "url": "./schema/global.json"
      },

      {
        "fileMatch": "custom/prompts/*.yaml",
        "url": "./schema/prompt.json"
      },
      {
        "fileMatch": "custom/prompts/**/*.yaml",
        "url": "./schema/prompt.json"
      },

      {
        "fileMatch": "custom/scenes/*.yaml",
        "url": "./schema/scene.json"
      },

      {
        "fileMatch": "custom/types/*.yaml",
        "url": "./schema/type.json"
      },
      {
        "fileMatch": "custom/types/**/*.yaml",
        "url": "./schema/type.json"
      },

      {
        "fileMatch": "manifest.yaml",
        "url": "./schema/manifest.json"
      }

    ]
  }
}
